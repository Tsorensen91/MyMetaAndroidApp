<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConditionFragment"
    tools:layout_editor_absoluteY="25dp">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="#ebebeb"
        android:contentDescription="@string/profilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPictureTitle"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPictureTitle"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/boxpink"
        android:gravity="center_vertical"
        android:text="@string/profilePicture"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Picture:" />

    <TextView
        android:id="@+id/tvAboutTitle"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/boxpink"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="About:" />

    <TextView
        android:id="@+id/tvSymptomsTitle"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/boxpink"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAbout"
        tools:text="My Symptoms:" />

    <TextView
        android:id="@+id/tvSymptomsTitle2"
        android:layout_width="344dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/boxpink"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSymtoms"
        tools:text="My Medication:" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_marginTop="46dp"
        android:backgroundTint="@color/colorMagenta"
        android:contentDescription="@string/editbutton"
        android:src="@drawable/ic_edit_regular"
        android:tint="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/profilePicture"
        app:layout_constraintEnd_toEndOf="@+id/tvPictureTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorMagenta"
        android:contentDescription="@string/editbutton"
        android:src="@drawable/ic_edit_regular"
        android:tint="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/etAbout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorMagenta"
        android:contentDescription="@string/editbutton"
        android:src="@drawable/ic_edit_regular"
        android:tint="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/etSymtoms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAbout" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="39dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/colorMagenta"
        android:contentDescription="@string/editbutton"
        android:src="@drawable/ic_edit_regular"
        android:tint="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/etSymtoms2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSymtoms" />

    <EditText
        android:id="@+id/etAbout"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:background="#ebebeb"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profilePicture"
        app:layout_constraintTop_toBottomOf="@+id/tvAboutTitle" />

    <EditText
        android:id="@+id/etSymtoms"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#ebebeb"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSymptomsTitle" />

    <EditText
        android:id="@+id/etSymtoms2"
        android:layout_width="344dp"
        android:layout_height="126dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#ebebeb"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSymptomsTitle2" />
</android.support.constraint.ConstraintLayout>