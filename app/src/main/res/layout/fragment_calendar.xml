    <RelativeLayout
        android:id="@+id/HeaderLayout"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center"
    android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
    android:background="@color/colorMagenta">


    <ImageView
    android:id="@+id/calendar_prev_button"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_centerVertical="true"
    android:src="@drawable/ic_edit_regular"/>

    <LinearLayout
    android:id="@+id/date_display"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_toEndOf="@id/calendar_prev_button">

    <TextView

    android:id="@+id/date_display_date"
    android:layout_width="wrap_content"
    android:layout_height="72dp"
    android:gravity="center"
    android:textColor="#FFFFFF"
    android:layout_marginStart="20dp"
    android:text="17 Feb 2019"/>

    </LinearLayout>

    <ImageView
    android:id="@+id/calendar_next_button"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="40dp"
    android:layout_toEndOf="@id/date_display"
    android:layout_toRightOf="@id/date_display"

    android:src="@drawable/ic_edit_regular"
    />
    </RelativeLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/HeaderLayout"
    android:id="@+id/calendar_header"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/colorTeal">

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:text="MON"
    android:textColor="#FFFFFF" />

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:text="TUE"
    android:textColor="#FFFFFF" />

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:text="WED"
    android:textColor="#FFFFFF" />

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:text="THU"
    android:textColor="#FFFFFF" />

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:text="FRI"
    android:textColor="#FFFFFF" />

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:text="SAT"
    android:textColor="#FFFFFF" />

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:text="SUN"
    android:textColor="#FFFFFF" />
    </LinearLayout>

    <GridView
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:numColumns="7"
        app:layout_constraintTop_toBottomOf="@id/calendar_header"/>

</android.support.constraint.ConstraintLayout>